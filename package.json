{
  "name": "multi-sns-viewer",
  "version": "1.0.0",
  "description": "複数のSNSアカウントをまとめて1画面で表示、管理するツール",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/renderer/*.html src/renderer/*.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,html,css,json}\"",
    "check": "npm run lint && npm run format:check && tsc --noEmit"
  },
  "keywords": [
    "electron",
    "sns",
    "viewer",
    "tiktok",
    "youtube",
    "twitter",
    "instagram",
    "threads"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^33.0.0",
    "oxlint": "^1.31.0",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0"
  }
}
